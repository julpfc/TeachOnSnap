<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">julpfc</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/teachonsnap</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.c3p0.min_size">5</property>
		<property name="hibernate.c3p0.max_size">20</property>
		<property name="hibernate.c3p0.timeout">1800</property>
		<property name="hibernate.c3p0.max_statements">50</property>
		
        <property name="show_sql">false</property>
        <property name="format_sql">false</property>
    
    	<mapping class="com.julvez.pfc.teachonsnap.model.lang.Language"/>
    	<mapping class="com.julvez.pfc.teachonsnap.model.lesson.Answer"/>
    	<mapping class="com.julvez.pfc.teachonsnap.model.lesson.Lesson"/>
    	<mapping class="com.julvez.pfc.teachonsnap.model.lesson.LessonTest"/>
    	<mapping class="com.julvez.pfc.teachonsnap.model.lesson.Link"/>
    	<mapping class="com.julvez.pfc.teachonsnap.model.lesson.Question"/>
    	<mapping class="com.julvez.pfc.teachonsnap.model.lesson.Tag"/>
    	<mapping class="com.julvez.pfc.teachonsnap.model.media.MediaFile"/>
    	<mapping class="com.julvez.pfc.teachonsnap.model.media.MediaFileRepositoryPath"/>
    	<mapping class="com.julvez.pfc.teachonsnap.model.user.User"/>
        
        <mapping resource="/hibernate/lang.hbm.xml"/>
        <mapping resource="/hibernate/lesson.hbm.xml"/>
        <mapping resource="/hibernate/media.hbm.xml"/>
        <mapping resource="/hibernate/user.hbm.xml"/>
     
    </session-factory>
</hibernate-configuration>